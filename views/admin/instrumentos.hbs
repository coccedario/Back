<div class="buscar">



  <form action='/admin/instrumentos/rubros' method='post'>

    <center>
      <h4> Filtrar Instrumentos por Rubro </h4>
    </center>

    <div class="buscarin">

      <div>
        <label for="exampleInputPassword1" class="form-label">Rubro</label>
        
        <select name="rubro">




          {{#each rubros}}

          <option value="{{id}}">{{descripcion}} </option>

          {{/each}}

          <select />

      </div>

      <button type="submit" class="btn btn-primary">Buscar</button>

    </div>





  </form>





