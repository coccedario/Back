<div class="container text-center">
  <div class="row">
    <div class="col-7">

    </div>

    <div class="col-5 text-end">

      <a type="button" class="btn btn-success" href="/admin/instrumentos/agregar">Art Nuevo </a>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Imagen</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">

    {{#each datos}}

    <tr>
      <th scope="row">{{id}}</th>
      <td>{{titulo}}</td>
      <td>{{{imagen}}}</td>
      <td class="text-end"><a class="btn btn-primary" href="/admin/instrumentos/modificar/{{id}}"><i
            class="fa-solid fa-pen"></i> </a></td>
      <td><a class="btn btn-secondary" href="/admin/instrumentos/eliminar/{{id}}"><i
            class="fa-regular fa-trash-can"></i> </a></td>
    </tr>

    {{/each}}

  </tbody>
</table>